<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mortarHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/str_mortars"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/textDark" />

    <com.squadfinder.brend.squadandroidcalculator.view.MaxHeightListView
        android:id="@+id/mortarMarkListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/targetHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/str_targets"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/textDark" />

    <com.squadfinder.brend.squadandroidcalculator.view.MaxHeightListView
        android:id="@+id/targetMarkListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:padding="8dp">
        <Button
            android:id="@+id/confirmAssignButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightGreen"
            android:text="@string/str_btn_confirm_assign" />
    </LinearLayout>

</LinearLayout>